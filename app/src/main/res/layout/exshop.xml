<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/huandengpian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/shopImg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hdp1" />

                <ImageView
                    android:id="@+id/shopImg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hdp2" />

                <ImageView
                    android:id="@+id/shopImg3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hdp3" />
            </LinearLayout>
        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/shape">

            <TextView
                android:id="@+id/shopname"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:text="2017冬季新款棉衣男装青年韩版帅气"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/seal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/shopname"
                android:layout_below="@id/shopname"
                android:layout_marginLeft="20dp"
                android:text="$ 400"
                android:textColor="#ff0000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/seal"
                android:layout_below="@id/seal"
                android:text="快递：包邮   销量：17,351件"
                android:textColor="#452140" />

            <ImageButton
                android:id="@+id/share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/shopname"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:background="@drawable/shaer" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/share"
                android:layout_below="@id/share"
                android:text="分享"
                android:textColor="#333333"
                android:textSize="20dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/goumai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="点击加入购物车"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="----------商品详情----------"
            android:textColor="#333333"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="产品参数：
上市年份季节: 2017年冬季填充物: 丝棉材质成分: 聚酯纤维100%货号: JK9666销售渠道类型: 纯电商(只在线上销售)品牌: 百年祥狐厚薄: 加厚基础风格: 青春流行"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:src="@drawable/hdp3" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:src="@drawable/hdp2" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>